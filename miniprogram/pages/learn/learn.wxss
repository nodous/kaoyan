/* miniprogram/pages/learn.wxss */
.quanParent {
  width: 100%;
  background: #f5f5f5;
  height: calc(100vh - 168rpx)
}
.parent {
  width: 100%;
  position: relative;
  overflow: hidden;
}
.box {
 width:86%;
 margin-left:4%;
  overflow: hidden;
  padding: 40rpx 30rpx 100rpx 36rpx;
  border: 1rpx solid #ccc; 
  background: #fff;
  margin-top: 20rpx;
  box-shadow:0rpx -2rpx 2rpx 2rpx #d8d7d7 inset;
}
.box .kind {
  font-size: 22rpx;
  margin-bottom:10rpx;
  color: #999999;
}
.box .title {
   font-size: 30rpx;
   color: #333333
}
.box .answer {
  margin: 10rpx 0;
}
.box .class {
  color: #828386;
  font-size: 24rpx;
  width: 100%;
  margin: 10rpx 0;
}
.parent .qusetionNum {
  width:48rpx;
  height:48rpx;
  position:absolute;
  top:34rpx;
  left:7rpx;
  background:#4c5d66;
  text-align:center;
  line-height: 48rpx;
  font-size: 0.6em;
  color: #fff;
  font-weight: 600;
}
.parent .result {
  position: absolute;
  right: 20rpx;
  bottom: 50rpx;
  text-align: center;
  font-size: 0.7em;
  color: #9698a0
}
.explain {
  position: absolute;
  width: 80%;
  left: 0rpx;
  min-height: 400rpx;
  top:4%;
  background: rgba(68, 68, 68, 0.8);
  color: rgb(255, 255, 255);
  padding: 40rpx 0rpx 100rpx 0rpx;
}
.explain .title {
  font-size: 28rpx;
  margin: 30rpx;
  
}
.explain .content {
  font-size: 28rpx;
}
.tips {
  width: 96%;
  padding: 0 2%;
  font-size: 22rpx;
  text-align: right;
  color: #d4f0ff;
  margin-top: 40rpx
}